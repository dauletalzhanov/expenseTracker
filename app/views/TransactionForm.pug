extends layout

block style
  // CSS links
  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" defer)
  title Edit/Delete Expense Form
  

block content
  
  // Edit Expense label
  h3.text-size-16.py-5(style='text-align: center;') #{title}

  form(method='POST').w-75.mx-auto.py-2

    //- Transaction Type  //added by daulet
    div.form-floating.mb-3
      select#TransactionType.form-select(aria-label='Floating label select example' name='Type' required)
        option Expense
        option Income
      label(for='TransactionType') Type

    // Expense Amount input
    div.form-floating.mb-3
      input.form-control#ExpenseAmount(type="number", placeholder="Expense Amount" name='Amount' required)
      label(for="ExpenseAmount") Transaction Amount

    // Date input
    div.form-floating.mb-3
      input.form-control#ExpenseDate(type="date", placeholder="Expense Date", aria-label="Expense Date" name='Date' required)
      label(for="ExpenseDate") Transaction Date
    

    // Expense Category select
    div.form-floating.mb-3
      select#ExpenseCategory.form-select(aria-label="Floating label select example" name='CategoryID')
        option(selected, disabled, hidden) Choose Expense Category
        each category in categories
          option(value=category.CategoryID) #{category.CategoryName}
      label(for="ExpenseCategory") Transaction Category

    div.form-floating.mb-3
      textarea(name="Description", style='width: 50vw; height: 10vh; border: 1px solid lightgray; padding: 1vw;' placeholder='Add a description...' required)
      label(for='Description') 
    // Expense Description textarea
      div.form-floating.mb-3.mt-2
        textarea#ExpenseDescription.form-control(placeholder="Expense Description")
        label(for="ExpenseDescription") Expense Description

    // Edit Transaction button
    button.btn.my-2.text-light(type="submit") Edit Transaction
