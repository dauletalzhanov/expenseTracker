extends layout
block style
  link(rel="stylesheet", href="/stylesheets/category_form.css")

block content
  .container
    a.icon(href="/categories")
      img(src="/images/back-button.png", alt="Back to category list", class='back')

    h2.title #{title}

    form(method="POST")
      div.form-floating.mb-3
        input.form-control#categoryName(type="text", placeholder="Add Category" name="categoryName" required value=`${category ? category.CategoryName : ''}`)
        label(for="categoryName")
        - let urlUpdate = category && category.CategoryID ? `/categories/${category.CategoryID}/update` : ''
        button.btn.btn-primary(type="submit")(onclick=urlUpdate ? `location.href='${urlUpdate}'` : '') #{ category ? 'Update Category' : 'Add a Category' }