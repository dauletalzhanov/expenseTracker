extends layout

block content
  title Edit/Delete Expense Form

  // CSS links
  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
  link(rel="stylesheet", href="../public/stylesheet/style.css")

  // Edit Expense label
  h3.text-size-16.py-5 Edit Transaction

  // Expense form container
  div.w-75.mx-auto.py-2

    // Expense Amount input
    div.form-floating.mb-3
      input.form-control#ExpenseAmount(type="number", placeholder="Expense Amount")
      label(for="ExpenseAmount") Expense Amount

    // Expense Category select
    div.form-floating.mb-3
      select#ExpenseCategory.form-select(aria-label="Floating label select example")
        option(selected, disabled, hidden) Choose Expense Category
        each category in categories
          option(value=category.CategoryID) #{category.CategoryName}
      label(for="ExpenseCategory") Expense Category

    // Date input
    div.form-floating.mb-3
      input.form-control#ExpenseDate(type="date", placeholder="Expense Date", aria-label="Expense Date")
      label(for="ExpenseDate") Expense Date

    // Edit Expense button
    button.btn.my-2.text-light(type="submit") Edit Expense

  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")