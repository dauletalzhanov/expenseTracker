extends layout

block content
  title Record Expense Form
  // CSS links
  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
  link(rel="stylesheet", href="../public/stylesheet/style.css")

  body
    // Expense form container
    div.w-75.mx-auto.py-5
      // Expense Name input
      div.form-floating.mb-3
        input#ExpenseName.form-control(type="text", placeholder="Expense Name")
        label(for="ExpenseName") Expense Name

      // Expense Amount input
      div.form-floating.mb-3
        input#ExpenseAmount.form-control(type="number", placeholder="Expense Amount")
        label(for="ExpenseAmount") Expense Amount

      // Date input
      div.form-floating.mb-3
        input#ExpenseDate.form-control(type="date", placeholder="Expense Date", aria-label="Expense Date")
        label(for="ExpenseDate") Expense Date

      // Expense Type select
      div.form-floating.mb-3
        select#ExpenseType.form-select(aria-label="Floating label select example")
          option(selected, disabled, hidden) Choose Expense Type
          option(value="Expense") Expense
          option(value="Income") Income
        label(for="ExpenseType") Expense Type

      // Expense Category select
      div.form-floating.mb-3
        select#ExpenseCategory.form-select(aria-label="Floating label select example")
          option(selected, disabled, hidden) Choose Expense Category
          each category in categories
            option(value=category.CategoryID) #{category.CategoryName}
        label(for="ExpenseCategory") Expense Category

      // Expense Description textarea
      div.form-floating.mb-3.mt-2
        textarea#ExpenseDescription.form-control(placeholder="Expense Description")
        label(for="ExpenseDescription") Expense Description

      // Add Expense button
      button.btn.my-2.text-light(type="submit") Add Expense

    // JavaScript dependencies
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")