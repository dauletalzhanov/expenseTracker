extends layout

block style
  // CSS links
  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")

block content
  h1(style="margin-top: 20px; font-size: 20px")= title

  if users
    table.table
      thead
        tr
          th(style="font-size: 14px") UserID
          th(style="font-size: 14px") Username
          th(style="font-size: 14px") Email
          th(style="font-size: 14px") FirstName
          th(style="font-size: 14px") LastName
          th(style="font-size: 14px") DateOfBirth
          
      tbody
        each user in users
          tr
            td #{user.UserID}
            td #{user.Username}
            td #{user.Email}
            td #{user.FirstName}
            td #{user.LastName}
            td #{user.DateOfBirth ? user.DateOfBirth.toISOString().split('T')[0] : 'N/A'}

        
  else
    p There are no users
