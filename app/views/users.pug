extends layout

block style
  // CSS links
  link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")

block content
  h1= title

  if users
    table.table
      thead
        tr
          th UserID
          th Username
          th Email
          th FirstName
          th LastName
          th DateOfBirth
          
      tbody
        each user in users
          tr
            td #{user.UserID}
            td #{user.Username}
            td #{user.Email}
            td #{user.FirstName}
            td #{user.LastName}
            td #{user.DateOfBirth ? user.DateOfBirth.toISOString().split('T')[0] : 'N/A'}

        
  else
    p There are no users
